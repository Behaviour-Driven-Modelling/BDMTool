{
	"name": "bdmtool",
	"displayName": "BDMTool",
	"description": "BDM tool for applying BDM in VDM++",
	"version": "1.1.0",
	"engines": {
		"vscode": "^1.67.0"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/mactanex/BDMTool"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onLanguage:vdmpp",
		"onCommand:bdm.createProject",
		"onCommand:bdm.test",
		"onView:BDMTestView"
	],
	"main": "./out/extension.js",
	"contributes": {
		"submenus": [
			{
				"id": "bdm.commandsubmenu",
				"label": "BDM"
			}
		],
		"menus": {
			"view/title": [
				{
					"command": "bdm.test",
        			"when": "view == BDMTestView"
					
				}
			],
			"bdm.commandsubmenu": [
				{
					"command": "bdm.createProject"
				},
				{
					"command": "bdm.test"
				}
			],
			"explorer/context": [
				{
					"command": "bdm.createProject"
				},
				{
					"command": "bdm.test"
				}
			]
		},
		"commands": [
			{
				"command": "bdm.createProject",
				"title": "Create new BDM project"
			},
			{
				"command": "bdm.test",
				"title": "Run BDM tests",
				"icon": {
					"light": "resources/icons/media-play-svgrepo-com.svg",
					"dark": "resources/icons/media-play-svgrepo-com.svg"
				}
			}
		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "BDMTest",
					"title": "BDM Testing",
					"icon": "resources/icons/vsCodeIcon.svg"
				}
			]
		},
		"views": {
			"BDMTest": [
				{
					"id": "BDMTestView",
					"name": "BDM Test View"
				}
			]
		},
		"viewsWelcome": [
            {
                "view": "BDMTestView",
                "contents": "Open a BDM project and run test from this view.\n[Run test](command:bdm.test)"
            }
        ]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.67.0",
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.1.0",
		"@types/node": "14.x",
		"@typescript-eslint/eslint-plugin": "^5.12.1",
		"@typescript-eslint/parser": "^5.12.1",
		"eslint": "^8.9.0",
		"glob": "^7.2.0",
		"mocha": "^9.2.1",
		"typescript": "^4.5.5",
		"@vscode/test-electron": "^2.1.2"
	},
	"extensionDependencies": [
		"overturetool.vdm-vscode"
	],
	"dependencies": {
		"@terascope/fetch-github-release": "^0.8.7"
	}
}
